<?xml version="1.0" encoding="UTF-8" ?>
        <!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
                "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
        <!-- namespace指定和哪个Mapper映射器接口对应 -->
<mapper namespace="com.xdl.mapper.BankAccountDao">
<!-- 定义SQL语句 -->
<select id="findByNoAndPwd" resultType="com.xdl.bean.BankAccount">
        select * from cc.xdl_bank_account_34 where no = #{no} and password = #{password}
    </select>
</mapper>